<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">

    <followup_email_abandonedcart_items>
        <block type="sales/order_email_items" name="items" template="adm/abandonedcart/email/items.phtml">
            <action method="addItemRender"><type>default</type><block>checkout/cart_item_renderer</block><template>adm/abandonedcart/email/cart/default.phtml</template></action>

            <block type="sales/order_totals" name="followup_totals" template="sales/order/totals.phtml">
                <action method="setLabelProperties"><value>colspan="3" align="right" style="padding:3px 9px"</value></action>
                <action method="setValueProperties"><value>align="right" style="padding:3px 9px"</value></action>
                <block type="tax/sales_order_tax" name="tax" template="tax/order/tax.phtml">
                    <action method="setIsPlaneMode"><value>1</value></action>
                </block>
            </block>
        </block>

        <block type="core/text_list" name="additional.product.info" />
    </followup_email_abandonedcart_items>

</layout>
